<div class="row">
    <div class="col-sm-12">
        <div class="page-header">
            <h1>MB-STUDI <small>Authentification</small></h1>
        </div>
    </div>
</div>
<div class="row" ng-if="$ctrl.errorMessage != null">
    <div class="col-sm-12">
        <div class="alert-danger">
            <p class="text-center">{{$ctrl.errorMessage}}</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 col-md-4 col-md-offset-4">
        <form>
            <div class="form-group text-center">
                <label>ÉMAIL</label>
                <input class="form-control" ng-model="$ctrl.user.Email" style="margin-left:auto; margin-right:auto;"/>
            </div>
            <div class="form-group text-center">
                <label>MOT DE PASSE</label>
                <input class="form-control" ng-model="$ctrl.user.Password" type="password" style="margin-left:auto; margin-right:auto;"/>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-info" ng-click="$ctrl.authenticate()">Valider</button>
            </div>
        </form>
    </div>
</div>
